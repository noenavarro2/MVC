        <td>
            @Html.DropDownList("idSerie", null, new { @class = "form-control", onchange = "this.form.submit()" })
          
        </td>
    </tr>
</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Serie.Nom_serie)
        </th>
